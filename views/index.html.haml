%header#header
  %section#blog_info
    %h1
      %a{:href => "/"} {Title}
    .description.cont {Description}
    %a{:href => "http://itunes.apple.com/us/podcast/eric-and-mitch-explain/id533649535"}
      Subscribe on iTunes
    %a{:href => "http://feeds.feedburner.com/ericandmitchexplain"}
