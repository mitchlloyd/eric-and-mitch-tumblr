%ul#posts
  {block:Posts}{block:Audio}
  %section.caption
    %h2
      %a{:href => "{Permalink}"} {TrackName}
  
  %section.group.caption_and_post_info
    {block:Caption}
    %section.caption.group
      .cont
        {block:AlbumArt}
        %img.album-art{:src => "{AlbumArtURL}"}
        {/block:AlbumArt}

        {Caption}

        %section.audio-player.top.audio {AudioPlayerGrey}
        .date {MonthNumber}/{DayOfMonth}/{Year}
    {/block:Caption}
    
      
  {/block:Audio}{/block:Posts}
